<h1><%= @cocktail.name %></h1>
<ul>
<% @cocktail.doses.each do |dose| %>
  <li><%= dose.ingredient.name %>: <%= dose.description %></li>
  <p><%= link_to "Delete Dose", dose_path(dose), method: :delete, data: {confirm: "Are you sure?"} %></p>
<% end %>
</ul>

<p><%= link_to "Add Doses", new_cocktail_doses_path(@cocktail) %></p>
<p><%= link_to "Back to Cocktails", cocktails_path %></p>